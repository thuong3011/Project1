@model IEnumerable<Models.EF.News>

@{

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#checkall').click(function () {
            if ($(this).is(":checked"))
                $('.checkitem').prop('checked', true);
            else
                $('.checkitem').prop('checked', false);

        });
    });
</script>
<h2>Quản lý tin tức</h2>
@using (Html.BeginForm("Delete", "Newss", FormMethod.Post))
{
    <p>
        <a href="@Url.Action("Add", "Newss")" class="btn btn-primary" style="margin-top:20px;margin-bottom:15px;">Create News</a>
    </p>
    <div style="width: 1100px; height:300px; ">


        <table id="example" class="table table-striped table-bordered table-hover" style="width:90%">
            <thead>
                <tr>
                    <th>Mã tin tức</th>
                    <th>Tiêu đề</th>
                    <th>Chi tiết</th>
                    <th>Hình ảnh</th>
                    <th>Ngày cập nhật</th>
                    <th>Chỉnh sửa</th>
                    <th>Xóa tất cả <input type="checkbox" id="checkall" /></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="Search">
                        <td> @item.NewsId</td>
                        <td> @item.Title</td>
                        <td>@item.Detail</td>
                        <td><img style="width:200px;height:200px" src="@Url.Content("~/image/" + item.Photo)" alt=""></td>
                        <td>@item.DateUpdate</td>

                        <td><a href="/Admin/Newss/Edit?NewsId=@item.NewsId"><span class="fa fa-edit"></span></a>@*@Html.ActionLink("Edit", "Edit", new { NewsId = item.NewsId }, new { @class = "glyphicon glyphicon-edit" })*@</td>

                        <td><input type="checkbox" class="checkitem" value="@item.NewsId" name="NewsId" /></td>
                    </tr>
                }

            </tbody>
            <tfoot>
                <tr>
                    <th>Mã tin tức</th>
                    <th>Tiêu đề</th>
                    <th>Chi tiết</th>
                    <th>Hình ảnh</th>
                    <th>Ngày cập nhật</th>
                    <th>Chỉnh sửa</th>
                    <th>Xóa tất cả <input type="checkbox" id="checkall" /></th>
                </tr>
            </tfoot>
        </table>

        <div class="col-sm-offset-10">

            <input type="submit" class="btn btn-danger" value="Delete" onclick="return confirm('Are you sure?')" />
        </div>

    </div>

}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Content/DataTable/js/jquery.dataTables.min.js"></script>
<script src="~/Content/DataTable/js/dataTables.bootstrap.min.js"></script>

<script type="text/javascript">

    $('#example').DataTable();
</script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>


