@model Models.EF.User

@{
    ViewBag.Title = "Xem thông tin tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thông tin tài khoản</h2>
<div>
    <fieldset disabled>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="username">Tên đăng nhập</label>
                <input type="text" class="form-control" id="username" placeholder=@Model.Username>
            </div>
            <div class="form-group col-md-6">
                <label for="password">Mật khẩu</label>
                <input type="password" class="form-control" id="password" placeholder=@Model.Password>
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress">Tên</label>
            <input type="text" class="form-control" id="name" placeholder=@Model.Name>
        </div>
        <div class="form-group">
            <label for="inputAddress">Email</label>
            <input type="text" class="form-control" id="email" placeholder=@Model.Email>
        </div>
        <div class="form-group">
            <label for="address">Địa chỉ</label>
            <input type="text" class="form-control" id="address" placeholder=@Model.Address>
        </div>
        <div class="form-group">
            <label for="phone">Số điện thoại</label>
            <input type="text" class="form-control" id="phone" placeholder=@Model.Phone>
        </div>

        <div class="form-group">
            <div class="form-check">
                @{
                    if (Model.Status)
                    {
                        <input class="form-check-input" type="checkbox" id="status" checked style="margin-left: -11px;">

                    }
                    else
                    {
                        <input class="form-check-input" type="checkbox" id="status" style="margin-left: -11px;">

                    }
                }
            </div>
            <a style="margin-left: 21px;">Trạng thái kích hoạt</a>
        </div>
        <fieldset disabled>
            <button class="btn btn-warning"> <a href="/RegisterAndLogin/EditCurentUser">Sửa thông tin</a></button>
</div>
